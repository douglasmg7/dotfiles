// 0 - off
// 1 - warn
// 3 - error
{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
		"jquery": true
    },
	"globals": {
		"Backbone": true
	},
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            2
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            0,
            "single",
			"avoid-escape"
        ],
        "semi": [
            2,
            "always"
        ],
		"no-console": 0
    }
}
